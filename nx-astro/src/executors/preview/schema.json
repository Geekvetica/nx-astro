{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxAstroPreview",
  "title": "Preview a built Astro project",
  "description": "Runs a preview server for a built Astro project using the `astro preview` command",
  "type": "object",
  "properties": {
    "port": {
      "type": "number",
      "description": "Preview server port",
      "default": 4321
    },
    "host": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "boolean"
        }
      ],
      "description": "Host address to bind the server to (default: localhost)"
    },
    "root": {
      "type": "string",
      "description": "Project root path (usually provided by Nx)"
    },
    "config": {
      "type": "string",
      "description": "Path to Astro config file",
      "default": "astro.config.mjs"
    },
    "outputPath": {
      "type": "string",
      "description": "Output directory to serve"
    },
    "site": {
      "type": "string",
      "description": "Site URL for absolute URLs"
    },
    "base": {
      "type": "string",
      "description": "Base path for deployment"
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose output",
      "default": false
    },
    "open": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "boolean"
        }
      ],
      "description": "Open browser on server start",
      "default": false
    },
    "additionalArgs": {
      "type": "array",
      "description": "Additional CLI arguments to pass to Astro",
      "items": {
        "type": "string"
      }
    }
  },
  "required": []
}
