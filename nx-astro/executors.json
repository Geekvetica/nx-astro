{
  "$schema": "http://json-schema.org/schema",
  "executors": {
    "build": {
      "implementation": "./src/executors/build/executor",
      "schema": "./src/executors/build/schema.json",
      "description": "Build an Astro project for production"
    },
    "preview": {
      "implementation": "./src/executors/preview/executor",
      "schema": "./src/executors/preview/schema.json",
      "description": "Preview a built Astro project"
    },
    "dev": {
      "implementation": "./src/executors/dev/executor",
      "schema": "./src/executors/dev/schema.json",
      "description": "Run the Astro development server"
    },
    "check": {
      "implementation": "./src/executors/check/executor",
      "schema": "./src/executors/check/schema.json",
      "description": "Run type checking and diagnostics for an Astro project"
    },
    "test": {
      "implementation": "./src/executors/test/executor",
      "schema": "./src/executors/test/schema.json",
      "description": "Run tests using Vitest for an Astro project"
    },
    "sync": {
      "implementation": "./src/executors/sync/executor",
      "schema": "./src/executors/sync/schema.json",
      "description": "Generate TypeScript types for Content Collections and other Astro features"
    }
  }
