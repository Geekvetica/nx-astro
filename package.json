{
  "name": "@geekvetica/source",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Geekvetica Pawe≈Ç Wojciechowski",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "nx build nx-astro",
    "test": "nx test nx-astro",
    "test:e2e": "nx e2e nx-astro-e2e",
    "test:all": "nx run-many -t test && nx e2e nx-astro-e2e",
    "lint": "nx run-many -t lint --all",
    "lint:fix": "nx run-many -t lint --all --fix",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "typecheck": "nx run-many -t build --all",
    "clean": "nx reset && rm -rf dist node_modules/.cache",
    "release": "nx release",
    "verify": "npm run format:check && npm run lint && npm run test && npm run build",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@astrojs/node": "^9.5.0",
    "@nx/devkit": "21.6.4",
    "astro": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/eslint": "21.6.5",
    "@nx/eslint-plugin": "21.6.5",
    "@nx/jest": "21.6.5",
    "@nx/js": "21.6.5",
    "@nx/plugin": "21.6.5",
    "@nx/workspace": "21.6.5",
    "@swc-node/register": "~1.11.1",
    "@swc/cli": "~0.7.8",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^30.0.0",
    "@types/node": "24.8.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^16.2.4",
    "memfs": "^4.49.0",
    "nx": "21.6.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.2",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.1",
    "verdaccio": "^6.0.5"
  },
  "nx": {
    "includedScripts": []
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,mjs,cjs,json,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "provenance": "true"
  }
}
